{
  "$schema": "https://opencode.ai/config.json",
  "share": "disabled",
  "provider": {
    "lmstudio": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "LM Studio (local)",
      "options": {
        "baseURL": "http://127.0.0.1:1234/v1"
      }
    }
  },
  "mcp": {
    "searxng": {
      "type": "local",
      "enabled": true,
      "command": [
        "bunx",
        "-y",
        "mcp-searxng"
      ],
      "environment": {
        "SEARXNG_URL": "http://honeypot:8080"
      }
    },
    "basic-memory": {
      "type": "local",
      "enabled": true,
      "command": [
        "uvx",
        "basic-memory",
        "mcp"
      ]
    }
  },
  "permission": {
    "external_directory": "ask",
    "bash": {
      "rm": "ask",
      "curl": "ask"
    }
  },
  "autoupdate": false,
  "agent": {
    "build": {
      "disable": true
    },
    "plan": {
      "disable": true
    },
    "planner": {
      "excludedTools": [
        "write",
        "edit"
      ]
    },
    "researcher": {
      "excludedTools": [
        "write",
        "edit"
      ]
    }
  }
}
