{
  "$schema": "https://opencode.ai/config.json",
  "share": "disabled",
  "provider": {
    "lmstudio": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "LM Studio (Local)",
      "options": {
        "baseURL": "http://127.0.0.1:1234/v1"
      },
      "models": {
        "devstral-small-2": {
          "name": "mistralai/devstral-small-2-2512"
        }
      }
    }
  },
  "mcp": {
    "basic-memory": {
      "type": "local",
      "enabled": true,
      "command": [
        "uvx",
        "basic-memory",
        "mcp"
      ]
    },
    "zai-mcp-server": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@z_ai/mcp-server"
      ],
      "environment": {
        "Z_AI_API_KEY": "SECURE_API_KEY",
        "Z_AI_MODE": "ZAI"
      }
    },
    "web-search-prime": {
      "type": "remote",
      "url": "https://api.z.ai/api/mcp/web_search_prime/mcp",
      "headers": {
        "Authorization": "Bearer SECURE_API_KEY"
      }
    },
    "web-reader": {
      "type": "remote",
      "url": "https://api.z.ai/api/mcp/web_reader/mcp",
      "headers": {
        "Authorization": "Bearer SECURE_API_KEY"
      }
    },
    "zread": {
      "type": "remote",
      "url": "https://api.z.ai/api/mcp/zread/mcp",
      "headers": {
        "Authorization": "Bearer SECURE_API_KEY"
      }
    }
  },
  "permission": {
    "external_directory": "ask",
    "bash": {
      "rm": "ask",
      "curl": "ask"
    }
  },
  "autoupdate": false,
  "agent": {
    "build": {
      "disable": true
    },
    "plan": {
      "disable": true
    },
    "planner": {
      "excludedTools": [
        "write",
        "edit"
      ]
    },
    "researcher": {
      "excludedTools": [
        "write",
        "edit"
      ]
    }
  }
}
